{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "config":{"font":"Geneva"},
  "title": "Unemployment Rate & Average Working Hour per Week in Europe 2016",
   "projection": {
      "type": "conicEqualArea",
      "parallels": [65.5,41],
      "rotate":[-16,0,0]
    },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/kya10210/FIT3179A2/main/js/europe.json",
        "format": {"type": "topojson", "feature": "custom"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/kya10210/FIT3179A2/main/data/avg_hour_workedandunemp_rate.csv"
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"}
      },
      "layer": [
        {
          "mark": {
            "type": "circle",
            "tooltip":{"content": "data"}
          },
          "encoding": {
            "size": {"field": "unemp_rate", 
                     "title":"Unemployment Rate (%)",
                     "type": "quantitative",
                     "scale": {
                          "type": "threshold",
                          "domain": [3,5,10,15,20],
                          "range": [30, 100, 300, 500, 600, 1000]
                        }},
            "color": {"field": "avg_hrs_worked", 
                      "title":"Average Hours Worked per Week",
                      "type": "quantitative",
                      "scale":{
                          "type": "threshold",
          "domain": [30,35,  40],
          "range": ["#fdcc8a", "#fc8d59", "#e34a33","#b30000"]
                      }          
            }
          }
        }
      ]
    }
  ]
}
